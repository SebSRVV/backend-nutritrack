{
  "info": {
    "name": "NutriTrack - Profile Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upsert Profile",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" }
        ],
        "url": {
          "raw": "{{endpoint}}/api/profile",
          "host": ["{{endpoint}}"],
          "path": ["api", "profile"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"ale\",\n  \"dob\": \"2002-08-30\",\n  \"sex\": \"female\",\n  \"height_cm\": 165,\n  \"weight_kg\": 60,\n  \"activity_level\": \"moderate\",\n  \"diet_type\": \"maintain\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" }
        ],
        "url": {
          "raw": "{{endpoint}}/api/profile",
          "host": ["{{endpoint}}"],
          "path": ["api", "profile"]
        }
      },
      "response": []
    },
    {
      "name": "Get Recommendations",
      "request": {
        "method": "GET",
        "header": [
          { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" }
        ],
        "url": {
          "raw": "{{endpoint}}/api/profile/recommendations",
          "host": ["{{endpoint}}"],
          "path": ["api", "profile", "recommendations"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "endpoint", "value": "http://localhost:8080" }
  ]
}
