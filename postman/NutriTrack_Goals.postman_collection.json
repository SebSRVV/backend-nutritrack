{
  "info": { "name": "NutriTrack - Goals Management", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "Create Goal",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" }
        ],
        "url": { "raw": "{{endpoint}}/api/goals", "host": ["{{endpoint}}"], "path": ["api","goals"] },
        "body": { "mode": "raw",
          "raw": "{\n  \"goal_name\": \"fruits_veggies\",\n  \"goal_type\": \"increase\",\n  \"target_value\": 14,\n  \"unit\": \"servings\",\n  \"category_id\": 1\n}" }
      }
    },
    {
      "name": "List Goals",
      "request": {
        "method": "GET",
        "header": [ { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" } ],
        "url": { "raw": "{{endpoint}}/api/goals", "host": ["{{endpoint}}"], "path": ["api","goals"] }
      }
    },
    {
      "name": "Update Progress",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" }
        ],
        "url": { "raw": "{{endpoint}}/api/goals/{{goalId}}/progress", "host": ["{{endpoint}}"], "path": ["api","goals","{{goalId}}","progress"] },
        "body": { "mode": "raw", "raw": "{\n  \"current_progress\": 5\n}" }
      }
    },
    {
      "name": "Delete Goal",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "X-User-Id", "value": "11111111-1111-1111-1111-111111111111" } ],
        "url": { "raw": "{{endpoint}}/api/goals/{{goalId}}", "host": ["{{endpoint}}"], "path": ["api","goals","{{goalId}}"] }
      }
    }
  ],
  "variable": [
    { "key": "endpoint", "value": "http://localhost:8080" },
    { "key": "goalId", "value": "" }
  ]
}
